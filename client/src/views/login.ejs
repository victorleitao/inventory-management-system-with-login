<div class="container">
  <header class="loginHeader">
    <h1>Nunes Sports</h1>
    <h3>Sistema de Inventário</h3>
  </header>
  <main id="main">
    <section class="form-box">
      <h2 id="title">Entrar</h2>
      <form action="/dashboard" method="POST" id="form">
        <div class="input-group">

          <div class="input-field email-field" id="Email-field">
            <i class="fa-solid fa-envelope"></i>
            <input type="email" name="email" id="email" placeholder="E-mail">
          </div>

          <div class="input-field" id="Username-field">
            <i class="fa-solid fa-user"></i>
            <input type="text" name="name" id="name" placeholder="Usuário" autofocus required>
          </div>

          <div class="input-field" id="Password-field">
            <i class="fa-solid fa-key"></i>
            <input type="password" name="password" id="password" placeholder="Senha" required>
          </div>
        </div>

        <div class="login-button">
          <button type="submit" id="signInBtn">Entrar</button>
        </div>

        <div class="forgot-password-signUp-group">
          <button type="button" id="forgot-password">Esqueci minha senha</button>
          <button type="button" id="signUp">Não possuo cadastro</button>
        </div>
      </form>
    </section>
    <div id="popUpBox"></div>
  </main>
  <footer></footer>
</div>
<script type="module" src="/loginScript.js"></script>