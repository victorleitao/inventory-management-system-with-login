<section class="dashboard-container">
  <section class="dashboard-sidebar-container" id="dashboard-sidebar">
    <div id="dashboard-logo" class="dashboard-logo">
      <h2 id="dashboard-title">Nunes Sports</h2>
      <h3 id="dashboard-subtitle">Sistema de Inventário</h3>
    </div>
    <div class="dashboard-divider"></div>
    <section class="dashboard-sidebar-user" id="user-info">
      <img id="profile-pic" src="/profile-pic-300x300.png" alt="Avatar do usuário.">
      <span id="user-name">Nome</span>
    </section>
    <div class="dashboard-divider"></div>
    <section class="dashboard-sidebar-menu">
      <ul id="dashboard-menu-list" class="dashboard-menu-lists">
        <li id="inventarioList" class="menuActive">
          <a class="dashboard-link" id="inventario" href="">
            <i class="fa-solid fa-table"></i>
            <span class="dashboard-link-text">INVENTÁRIO</span>
          </a>
        </li>
        <li id="graficosList">
          <a class="dashboard-link" id="graficos" href="">
            <i class="fa-solid fa-chart-line"></i>
            <span class="dashboard-link-text">GRÁFICOS</span>
          </a>
        </li>
        <li id="configuracoesList">
          <a class="dashboard-link" id="configuracoes" href="">
            <i class="fa-solid fa-sliders"></i>
            <span class="dashboard-link-text">CONFIGURAÇÕES</span>
          </a>
        </li>
      </ul>
    </section>
  </section>
  <section class="dashboard-content-container">
    <nav class="dashboard-nav">
      <a href="" id="dashboardToggleBtn">
        <i id="dashboard-sidebar-icon" class="fa-solid fa-bars"></i>
      </a>
      <form action="/logout?_method=DELETE" method="POST" class="dashboard-logout">
        <button class="dashboard-logout" id="logoutBtn" type="submit">
          <i class="fa-solid fa-door-open"></i>
          <span id="logoutTxt">SAIR</span>
        </button>
      </form>
    </nav>
    <main class="dashboard-content" id="dashboardContent">
      <section class="dashboard-content-main">
        <section class="dashboard-table">
          <table class="product-table">
            <tr class="product-table-header">
              <th class="product-header-number">#</th>
              <th class="product-header-details"><i class="fa-regular fa-file-lines"></i></th>
              <th class="product-header-delete"><i class="fa-solid fa-trash"></i></th>
              <th class="product-header-name">NOME</th>
              <th class="product-header-code">CÓDIGO</th>
              <th class="product-header-description">DESCRIÇÃO</th>
              <th class="product-header-quantity">QTD</th>
              <th class="product-header-price" colspan="2">VALOR (U/T)</th>
            </tr>
            <tr class="product-table-row">
              <td class="product-item-number">1</td>
              <td class="product-item-details"><i class="fa-solid fa-pen"></i></td>
              <td class="product-item-delete"><i class="fa-solid fa-xmark"></i></td>
              <td class="product-item-name">Luva de Goleiro</td>
              <td class="product-item-code">12345</td>
              <td class="product-item-description">Luva de Goleiro da Marca X tamanho G</td>
              <td class="product-item-quantity">123</td>
              <td class="product-item-u-price">9999,99</td>
              <td class="product-item-t-price">99999,99</td>
            </tr>
          </table>
        </section>
        <section class="operations-menu">
          <button class="add-product">
            <i class="fa-solid fa-plus"></i>ADICIONAR PRODUTO
          </button>
          <button class="filter-products">
            <i class="fa-solid fa-filter"></i>FILTRAR PRODUTOS
          </button>
          <button class="sum-products">
            <i class="fa-solid fa-calculator"></i>CALCULAR TOTAL
          </button>
          <div class="sum-result">299,99</div>
        </section>
      </section>
    </main>
  </section>
</section>
<div id="popUpBox"></div>
<script type="module" src="/dashboardScript.js"></script>